{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "declaration": false,
    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "types": [],
    "allowSyntheticDefaultImports": true
  
  },
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
